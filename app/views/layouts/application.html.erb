<!DOCTYPE html>
<html>
  <head>
    <title>Nomadtrip</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= filepicker_js_include_tag %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-inverse">
        <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar" aria-controls="exCollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation">
          &#9776;
        </button>
        <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar" >
          <a class="navbar-brand" href="#">NomadList</a>
            <ul class="pull-xs-right nav navbar-nav ">
              <% if user_signed_in? %>
              <li class="nav-item li-menu">
                <%= link_to "See all my travels", trips_path %>
              </li>
          <li class="nav-item li-menu">
            <%= link_to 'My account',  edit_user_registration_path(current_user) %>
          </li>
          <li class="nav-item li-menu">
            <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Sign-up", new_user_registration_path, class:"btn btn-outline-primary" %>
          </li>
        <% end %>
        </ul>
      </div>
      </nav>
    </header>
    <div class="container">
      <br>
      <br>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.navbar-toggler').click(function(){
          $('.navbar-toggleable-xs').collapse('hide')
        });
      });
     </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.min.js"></script><!-- Bootstrap -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.2.0/js/tether.min.js" integrity="sha384-Plbmg8JY28KFelvJVai01l8WyZzrYWG825m+cZ0eDDS1f7d/js6ikvy1+X+guPIB" crossorigin="anonymous"></script>

  </body>
</html>
