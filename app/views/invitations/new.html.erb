<div class="col-sm-6">
  <%= simple_form_for @user, url: trip_invitations_path do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: "Who else is coming with you ?", placeholder: "Email address" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Validate", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
