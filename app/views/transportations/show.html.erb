<div class="row text-xs-center">
  <h1>Votre partez en <%= @transportation.transportation_type %> pour <%= @transportation.trip.destination %> !</h1>
</div>
<br>
<br>
<div class="row">

  <!-- details of transportation -->
  <div class="col-sm-6">
    <div class="card card-block">
      <div class="row">
        <div class="col-sm-7">
          <h4 class="card-title">Détails :</h4>
        </div>
        <div class="col-sm-5 text-xs-right">
          <%= link_to 'Ajouter un transport', new_trip_transportation_path, class:"btn btn-primary" %>
        </div>
      </div>
      <p><i class="fa fa-globe" aria-hidden="true"></i> Ville de départ : <%= @transportation.departure_city %></p>
      <p><i class="fa fa-calendar-check-o" aria-hidden="true"></i> Départ : <%= (@transportation.departure_datetime).strftime("%d/%m/%Y à %H:%M" ) %></p>
      <p><i class="fa fa-calendar-check-o" aria-hidden="true"></i> Arrivée : <%= (@transportation.arrival_datetime).strftime("%d/%m/%Y à %H:%M" ) %> </p>
      <% if @transportation.price? %>
        <p><i class="fa fa-eur" aria-hidden="true"></i> Prix : <%= number_to_currency(@transportation.price_per_personne, unit: "€") %> / par personne</p>
      <% end %>
      <p>Réservation n°: <%= @transportation.reference_number %></p>
      <p>
        <% if @transportation.link? %>
          <%= link_to @transportation.link, target: "_blank", class:"btn btn-secondary btn-sm active" do %>
            <% if @transportation.company? %>
              <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Voir ou s'enregistrer sur <%= (@transportation.company).capitalize %>
            <% else %>
              <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> S'enregistrer ou consulter le site
            <% end %>
          <% end %>
        <% end %>
      </p>

      <div class="row">
        <div class="col-sm-8">
          <%= link_to 'Retour', root_path, class:"btn btn-warning" %>
          <%= link_to 'Modifier', edit_trip_transportation_path(@trip), class:"btn btn-primary" %>
        </div>
        <div class="col-sm-4 text-xs-right">
          <%= link_to "<i class='fa fa-trash-o fa-2x' aria-hidden='true'></i> Supprimer".html_safe, trip_transportation_path, method: :delete, data: { confirm: "Confirmez la suppression" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Billets -->
  <div class="col-sm-6">
    <div class="col-sm-12 card-box text-xs-center">
      <div class="row">
        <div class="col-sm-8">
          <h4><%= title_upload %></h4>
        </div>
        <% if @transportation.tickets.empty? %>
        <div class="col-sm-12">
        <%= simple_form_for [@trip, @transportation, @transportation.tickets.new] do |f|  %>
          <%= f.filepicker_field :filepicker_url, button_text: "Télécharger", button_class:"btn btn-warning", services: "COMPUTER, GMAIL, GOOGLE_DRIVE, DROPBOX" %>
          <%= f.submit "Valider", class:"btn btn-primary" %>
        <% end %>
        </div>
        <% else %>
        <div class="col-sm-4">
          <%= link_to 'Ajouter', new_trip_transportation_ticket_path(@trip, @transportation), class:"btn btn-primary" %>
        </div>
      </div>
      <br>
      <br>
      <div class="col-sm-12">
        <% @transportation.tickets.each do |ticket| %>
        <div class="col-sm-6">
          <div class="box-files">
            <%= link_to ticket.filepicker_url do %>
              <%= filepicker_image_tag ticket.filepicker_url, w: 300, h: 300, fit: 'clip' %>
            <% end %>
          </div>
          <%= link_to trip_transportation_ticket_path(@trip, @transportation, ticket), method: :delete do %>
            <i class='fa fa-trash-o fa-2x' aria-hidden='true'></i>
            <% end %>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

</div>
