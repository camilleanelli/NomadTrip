<%= simple_form_for [@trip, @transportation] do |f| %>
  <% if @transportation.errors.any? %>
   <div>
     <h2> Oups ! </h2>
     <ul>
       <% @transportation.errors.full_messages.each do |msg| %>
           <li style="color:red"><%= msg %></li>
       <% end %>
     </ul>
   </div>
<% end %>
<div class="row">
  <h1>Add a transportation for your trip to <%= @trip.destination %></h1>
</div>
<hr>


<div class="row spacer-margin">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <%= f.input :transportation_type, label: "<i class='fa fa-plane' aria-hidden='true'></i> <strong>Transportation type :</strong>".html_safe, default: "Avion", collection: ["Avion", "Train", "Bus", "Voiture", "Bateau", "Autre..."] %>
        <%= f.input :departure_datetime, label: "<i class='fa fa-calendar-check-o' aria-hidden='true'></i> <strong>Departure :</strong>".html_safe, default: @transportation.trip.start_date %>
        <%= f.input :arrival_datetime, label: "<i class='fa fa-calendar-check-o' aria-hidden='true'></i> <strong>Arrival : </strong>".html_safe, default: @transportation.trip.start_date %>
        <%= f.input :departure_city, label: "<i class=' fa fa-globe' aria-hidden='true'></i> <strong>Departure city :</strong>".html_safe, input_html: {id: :autocomplete}, placeholder: "Ex: Paris" %>

        <p>
          <p>
            <button class="btn btn-primary btn-sm collapsed-button" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              <i class="fa fa-undo" aria-hidden="true"></i> Including return the <%= (@trip.end_date).strftime("%d/%m/%Y")%> ?
            </button>
          </p>
          <div class="collapse" id="collapseExample">
            <div class="card card-block">
              <%= f.input :return_date_departure, label: "<strong>Departure :</strong>".html_safe, default: @transportation.trip.end_date, include_blank: true %>
              <%= f.input :return_date_arrival, label: "<strong>Arrival :</strong>".html_safe, default: @transportation.trip.end_date, include_blank: true %>
            </div>
          </div>
        </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card width-card-acmd">
      <div class="card-block">
        <%= f.input :price, label: "<i class='fa fa-money' aria-hidden='true'></i> <strong>Total price :</strong>".html_safe, input_html: { value: "00" } %>
        <%= f.input :reference_number, label: "<strong>Reservation number :</strong>".html_safe, placeholder: "Ex: YY1TWJ" %>
        <%= f.input :company, label: "<strong>Company :</strong>".html_safe, placeholder: "Ex: THAI Arways" %>
        <%= f.input :link, label: "<i class='fa fa-link' aria-hidden='true'></i> <strong>Link :</strong>".html_safe, placeholder: "Ex: http://www.thaiairways.com/" %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 text-xs-center spacer-margin">
      <%= f.submit "Validate", class:"btn btn-primary size-btn" %>

  </div>
</div>

<% end %>
