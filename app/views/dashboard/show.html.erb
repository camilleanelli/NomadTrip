                  <% else %>
                    <%= image_tag("user.png") %>
                  <% end %>
                    <%= user.first_name %>
                  <% end %>
                  </li>
                <% end %>
              </dd>
            </dl>

          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <dl class="row">
              <dt class="col-xs-6">Total cost</dt>
