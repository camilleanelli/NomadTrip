              <dt class="col-xs-6">Cost per traveler </dt>
              <dd class="col-xs-6"><%= @next_trip.total_cost_per_traveler %></dd>
            </dl>
        </div>
      </div>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <dl class="row">


                <dt class="col-sm-4">Accomodation(s)</dt>
                <% if @next_trip.accomodations.empty? %>
