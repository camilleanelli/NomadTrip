<div class="row text-xs-center title-pages">
  <h1>Welcome to NomadTrip</h1>
</div>
<div class="col-sm-6 offset-sm-3">
  <div class="card fadeIn">
    <div class="card-block">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="col-sm-6">
            <%= f.input :first_name, required: true, autofocus: true %>
          </div>
          <div class="col-sm-6">
            <%= f.input :last_name, required: true, autofocus: true %>
          </div>
          <div class="col-sm-12">
            <%= f.input :email, required: true, autofocus: true %>
          </div>
          <div class="col-sm-12">
            <%= f.input :nomadlist_username, label: ("Do you have a #{link_to 'NOMADLIST', 'https://nomadlist.com'} account?").html_safe, placeholder: "ex: Johndoe" %>
          </div>
          <div class="col-sm-12">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="col-sm-12">
            <%= f.input :password_confirmation, required: true %>
          </div>
        </div>
      <div class="form-actions">
        <%= f.button :submit, "Validate", class:"btn btn-primary" %>
      </div>
    <% end %>
   </div>
  </div>
</div>
