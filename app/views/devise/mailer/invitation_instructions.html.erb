<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
      <title>Nomadsteps</title>
      <style>
      #body-table {
       font-family: sans-serif;
       font-size: 20px;
     }

     .btn-call {
       padding: 10px;
       width: 60%;
       background-color: #F62459;
       border-radius: 5px;
       color: white;
       font-weight: bold;
       text-align: center;
     }

     #logo {
       color: #F62459;
       font-weight: bold;
       font-size: 30px;
       font-family: "lobster", cursive;

     }

     .color-font {
       color: white;
       text-decoration: none;
     }

     .signature {
       margin-top: 50px;
     }



  </style>
</head>

<body>
  <table  border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="body-table">
    <tr>
      <td valign="top">
        <table align="center" border="0" cellpadding="20" cellspacing="0" width="600">
          <tr>
            <td valign="top">
              <p id="logo">
              <img src="https://res.cloudinary.com/dp8fx5icp/image/upload/v1479463763/nomadtrip/travel.png" alt="" />  NomadSteps
              </p>
            </td>
          </tr>
          <tr>
            <td valign="top">
                <p><%= t("devise.mailer.invitation_instructions.hello", email: @resource.email) %></p>
                <p><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url) %></p>

                <div class="btn-call">
                  <%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, :invitation_token => @token), class:"color-font" %>
                </div>
                <% if @resource.invitation_due_at %>
                  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>

                <% end %>
                <p><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>

                <p class="signature">
                  See you soon !
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td align="center" valign="top">
          <table align="center" border="0" cellpadding="20" cellspacing="0" width="600">
            <tr>
              <td>
                <a href="https://twitter.com/NomadSteps"><img src="https://res.cloudinary.com/dp8fx5icp/image/upload/v1479462737/nomadtrip/twitter.png" alt="" /></a>
              </td>
              <td>
                <a href="https://www.instagram.com/nomadstep/?hl=fr"><img src="https://res.cloudinary.com/dp8fx5icp/image/upload/v1479462544/nomadtrip/instagram-logo.png" alt="" /></a>
              </td>
              <td>
                <a href="https://www.facebook.com/Nomadsteps-311805982519040/"><img src="https://res.cloudinary.com/dp8fx5icp/image/upload/v1479462257/nomadtrip/facebook-logo-button.png" alt="" />
              </td>
            </tr>

          </table>
        </td>
      </tr>
    </table>
  </body>
