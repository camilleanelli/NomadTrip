<%= simple_form_for @user, :url => edit_profile_path, :method => :patch do |f| %>
<div class="row">
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-3 text-xs-left">
        <%= link_to public_profile_path(@user) do %>
          <%= render "share/avatar" %>
        <% end %>
      </div>
      <div class="col-sm-9">
        <h1> Hi <%= current_user.first_name.capitalize %> !</h1>
      </div>
    </div>
    <div class="row text-xs-left" style="padding-top:10px">
        <%= f.filepicker_field :filepicker_url, button_text:  button_upload_profile_picture, button_class:"btn btn-secondary btn-sm" %>
    </div>
  </div>
  <div class="col-sm-4 text-xs-right">
    <div class="form-actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class='fa fa-check' aria-hidden='true'></i> VALIDATE
      <% end %>
    </div>
  </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6">
      <div class="card fadeIn">
        <div class="card-block">
          <h4>Edit informations</h4>
          <div class="form-inputs">
            <%= f.input :first_name, required: true %>
            <%= f.input :last_name, required: true %>
            <%= f.input :nomadlist_username, label: button_nomadlist_username, placeholder: "ex: #{current_user.first_name}#{current_user.last_name}" %>
            <%= f.input :email %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card fadeIn">
        <div class="card-block">
          <div class="col-sm-6">
            <%= link_to "<i class='fa fa-times-circle-o' aria-hidden='true'></i> Sign out ".html_safe, destroy_user_session_path, :method => :delete %>
          </div>
          <div class="col-sm-6">
            <%= link_to "<i class='fa fa-user' aria-hidden='true'></i> See public profile".html_safe, public_profile_path(@user) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="card fadeIn">
        <div class="card-block">
          <%= link_to "Cancel my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %>

        </div>
      </div>
    </div>

  </div>
